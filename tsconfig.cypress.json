{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types", "src/types", "node_modules/cypress"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "src/types/**/*.d.ts",
    "cypress/**/*.ts",
    "cypress/**/*.tsx",
    "cypress.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
