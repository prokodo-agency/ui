{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "google.maps", "vite/client"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "jsx": "react-jsx",
    "composite": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [".", "package.json"],
  "exclude": [
    "node_modules",
    "next.config.js",
    "eslint.config.mjs",
    "coverage/",
    "src/tests",
    "**/*.test.*",
    "jest.*",
    "src/vendor/hugeicons/*.js"
  ]
}
