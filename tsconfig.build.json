{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "outDir": "./dist/types",
    "rootDir": "./src",
    "composite": true,
    "noEmit": false
  },
  "include": [
    "src/index.ts",
    "src/components/**/*",
    "src/helpers/**/*",
    "src/hooks/**/*",
    "src/constants/**/*",
    "src/types",
    "src/vendor/hugeicons/**/*"
  ],
  "exclude": [
    "**/*.test.*",
    "**/*.stories.*",
    "**/*.spec.*",
    "node_modules",
    "dist"
  ]
}
