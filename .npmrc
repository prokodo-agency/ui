packageManager=pnpm@9.4.0

# Automatically resolve and install peer dependencies
auto-install-peers=true

# Use fast directory scanning
fast-glob=true

# Avoid creating symlinks to dependencies when possible
link-workspace-packages=false

# Enable frozen-lockfile for deterministic installs, reducing npm dependency resolution time
frozen-lockfile=true

# Prefer linking globally installed dependencies
prefer-frozen-lockfile=true

# Enable concurrency for better parallelization (adjust as per your CI/CD limits)
max-concurrency=16

# Avoid running scripts automatically during package installations
ignore-scripts=true

# Use a faster build resolver in pnpm
resolution-mode=lowest-direct

# Reduce install size by not hoisting subdependencies unnecessarily
shamefully-hoist=false