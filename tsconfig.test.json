{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["jest", "node"],
    "composite": true,
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "jest.d.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/**/*.tsx",
    "src/tests/**/*",
    "jest.*"
  ]
}
